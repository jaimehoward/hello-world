#include <stdio.h>
#include <stdlib.h>
int vlrs();
int main()
{
    int i, min, m, sv=0;
    int v[10];
    for (i=0;i<10;i++){
           v[i] = vlrs();
           sv += v[i];
    }
    for (i=0;i<10;i++){
       if (i == 0)
        min=v[0];
       else{
        if (min > v[i])
        min=v[i];}
        if (v[i] > 50 )
            m +=1;

    }
    printf("El minimo valor es %d la suma de todos los valores da como resultado %d y hay un total de %d numeros mayores a 50 \n ", min, sv, m);
    return 0;
}
int vlrs()
{
    int n;
    do{
printf("Ingrese un numero natural");
scanf("%d", & n);}
while (n < 0);
    return n;
}
